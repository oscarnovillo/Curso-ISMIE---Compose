<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/textMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="matricula"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textModelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textModelo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marca"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@+id/textMatricula"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="modelo"
        app:layout_constraintStart_toEndOf="@+id/textMatricula"
        app:layout_constraintTop_toBottomOf="@+id/textMarca" />
</androidx.constraintlayout.widget.ConstraintLayout>